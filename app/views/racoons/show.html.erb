<h1><%= @racoon.user.username %></h1>

<ul>
  <% if !@racoon.service.nil? %>
    <li>Title: <%= @racoon.service.title %></li>
    <li>Description: <%= @racoon.service.description %></li>
    <li>Item: <%= @racoon.service.item %></li>
    <li>Price: <%= @racoon.service.price %></li>
    <%= link_to "Destroy", service_path, data: { "turbo-method": :delete } %>
  <% end %>
</ul>

<h2>Disponibilities</h2>

<ul>
  <% if @racoon.disponibilities.present? %>
    <% @disponibilities.each do |disponibility| %>
    <li><i><%= disponibility.date %></i><i><%= button_to "Reserver", "https://racoonandburgers.herokuapp.com/users/#{current_user.id}/reservations?disponibility=#{disponibility.id}&racoon=#{@racoon.id}", method: :post %></i></li>
    <% end %>
  <% end %>
</ul>
