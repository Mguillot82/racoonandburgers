<div class="cards">
  <% @racoons.each do |racoon| %>
  <div>
    <div class="card">
      <%= link_to "", racoon_path(racoon) %>
      <div class="d-flex-column">
          <% if racoon.user.photo.attached? %>
        <div class="card-img" style="background-image : <%= cl_image_tag racoon.user.photo.key, height: 300, width: 400, crop: :fill %>">
          <% else %>
        <div class="card-img" style="background-image : url('https://t4.ftcdn.net/jpg/04/50/96/23/240_F_450962330_w4RDU0GCIeKy0QvSxBuJ0MHp4mkuXWts.jpg')">
          <% end %>
        </div>
          <div class="card-content">
            <div class="card-title"><%= racoon.user.username%></div>
            <div class="card-address"><%= racoon.user.city%></div>
            <div class="card-rating"><i class="fa-solid fa-star"></i>4.8</div>
            <div class="card-price"><%= racoon.service.price.round(2) %>â‚¬</div>
          </div>
        </div>
      </div>
    </div>
  <% end  %>
  </div>
</div>
