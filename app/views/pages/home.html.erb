<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://i.pinimg.com/originals/74/98/52/749852f182bcf4f96c99d311af4385d8.jpg);">
  <div class="container">
    <h1>Racoons and Burgers</h1>
    <div class='d-none' data-controller="scroll" data-scroll-target='element'>
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div id="form" class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder='Search your racoon !' />
            <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
    </div>
  </div>
</div>
<div class="container py-5">
  <div class="card-title">Our racoons are the best chefs in the world !</div>
  <%= render "shared/_cards_racoons" %>
</div>
