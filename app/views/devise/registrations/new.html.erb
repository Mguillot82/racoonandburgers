<div class="d-flex justify-content-center mt-4 mb-4">
  <h2>Sign up</h2>
</div>

<div class="d-flex justify-content-center mt-4 mb-4">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username", class: "bg-white" }%>
      <%= f.input :photo,
                  as: :file,
                  required: true,
                  autofocus: true %>
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name", class: "bg-white" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name", class: "bg-white" }%>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address", class: "bg-white" }%>
      <%= f.input :city,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "city", class: "bg-white" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bg-white" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "bg-white" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "bg-white" } %>
    </div>

    <div class="form-actions col-md-4 offset-md-4 d-flex justify-content-center mt-4 mb-4">
      <%= f.button :submit, "Sign up", class: "btn btn-secondary" %>
      <div class="ms-5 btn btn-primary">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>


</div>
