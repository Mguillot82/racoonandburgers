<div class="d-flex justify-content-center mt-4 mb-4">
  <h2>Log in</h2>
</div>
  <div class="d-flex justify-content-end me-5 mt-4 mb-4">
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
<div class="d-flex justify-content-center mt-4 mb-4">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bg-white" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "bg-white" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center mt-4 mb-4">
      <%= f.button :submit, "Log in", class: "btn btn-secondary" %>
    </div>
  <div class="form-actions d-flex justify-content-center mt-4 mb-4">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  </div>
  <% end %>
